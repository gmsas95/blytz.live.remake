# Blytz.live Production Environment Variables
# Copy this to .env and update with your actual values

# Domain Configuration
DOMAIN=blytz.app

# Traefik SSL Certificate Email
ACME_EMAIL=admin@blytz.app

# Database Configuration
DB_USER=blytz_user
DB_PASSWORD=blytz_secure_password_2024
DB_NAME=blytz_marketplace

# Redis Configuration
REDIS_PASSWORD=blytz_redis_secure_2024

# JWT Configuration
JWT_SECRET=blytz_jwt_super_secret_key_change_in_production_2024
JWT_EXPIRES_IN=168h

# API Configuration
VITE_API_URL=https://api.blytz.app/api/v1
VITE_APP_NAME=Blytz.app Marketplace
VITE_APP_VERSION=1.0.0
BACKEND_PORT=8080
FRONTEND_PORT=3000

# CORS Configuration
CORS_ORIGINS=https://blytz.app,https://api.blytz.app

# Environment
ENVIRONMENT=production

# Optional: Email Configuration (if you want email features)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@blytz.app

# Optional: Gemini AI Key (for AI chat assistant)
# GEMINI_API_KEY=your-gemini-api-key

# Optional: Monitoring
# SENTRY_DSN=your-sentry-dsn
# VITE_SENTRY_DSN=your-frontend-sentry-dsn
# VITE_GOOGLE_ANALYTICS_ID=GA-XXXXXXXX-X